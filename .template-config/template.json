{
  "author": "Steve VandenBrink",
  "classifications": ["Web", "ASP.NET"],
  "name": "VandenBrink Software Starter Web",
  "identity": "VandenBrinkSoftware.WebApiTemplate",
  "shortName": "vbswebapi",
  "tags": {
    "language": "C#"
  },
  "symbols": {
    "namespace": {
      "type": "parameter",
      "defaultValue": "API",
      "description": "The namespace to use for all source files generated by the template",
      "isRequired": "true",
      "replaces": "RootNamespace"
    },
    "useMongoDB": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false",
      "description": "Sets up MongoDB with structered logging and boilerplate"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!useMongoDB)",
          "exclude": [
            "Repositories/Domain/Mongo/**/*",
            "Entities/Domain/Mongo/**/*",
            "Entities/Settings/MongoDbSettings.cs"
          ]
        }
      ]
    }
  ],
  "preferNameDirectory": "true"
}
